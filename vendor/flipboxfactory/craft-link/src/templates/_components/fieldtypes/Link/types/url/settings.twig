        label: 'Allow relative Url'|t('link'),
        instructions: "Allow url to also start with '/'"|t('link'),
        name: 'allowRelativeUrl',
        id: 'allowRelativeUrl',
        on: type.settings.allowRelativeUrl,
    }) }}

