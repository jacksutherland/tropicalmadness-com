{% set menu = craft.entries.section("footerNav").level(1) %}

<footer data-title="Site Footer">
	<div class="container">
		<div class="row text-center text-lg-left">
			<div class="col-lg-3">
				<a href="/">
					<img src="/../images/small-logo.png" class="logo" alt="{{ systemName }}" title="{{ systemName }}">
				</a>
			</div>
			<div class="col-lg-4 offset-lg-1">
				<div class="footer-nav">
					{% for item in menu.all() %}
						<div>
							<a itemprop="url" id="{{ item.slug }}-button" href="{{ item.menuEntry.one().url }}">{{ item.menuTitle }}</a>
						</div>
					{% endfor %}
				</div>
			</div>
			<div class="col-lg-4">
				<div class="info">
					{% if contactInfo.phoneNumber | length %}
						<p>Phone: <a href="tel:{{ contactInfo.phoneNumber }}">{{ contactInfo.phoneNumber }}</a></p>
					{% endif %}
					{% if contactInfo.emailAddress %}
						<p>Email: <a href="mailto:{{ contactInfo.emailAddress }}">{{ contactInfo.emailAddress }}</a></p>
					{% endif %}
				</div>
				{% include '_includes/social-links' %}
			</div>
		</div>
	</div>
</footer>